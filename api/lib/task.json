{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/benc-uk/dapr-store/master/cmd/orders/spec/schema.json",
  "type": "object",
  "title": "Task entity",
  "additionalProperties": false,
  "required": [
    "id",
    "title",
    "complete",
    "owner",
    "notes",
    "assignedTo",
    "priority",
    "modifiedDate"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The task ID"
    },
    "title": {
      "$id": "#/properties/title",
      "type": "string",
      "minLength": 1,
      "title": "The task title"
    },
    "complete": {
      "$id": "#/properties/complete",
      "type": "boolean",
      "title": "Is the task finished yet"
    },
    "owner": {
      "$id": "#/properties/owner",
      "type": "string",
      "title": "The user-id of the task owner"
    },
    "notes": {
      "$id": "#/properties/notes",
      "type": "string",
      "title": "The task notes, free text"
    },
    "assignedTo": {
      "$id": "#/properties/assignedTo",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      },
      "title": "List of user-ids of assigned users"
    },
    "priority": {
      "$id": "#/properties/priority",
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "title": "The task priority"
    },
    "modifiedDate": {
      "$id": "#/properties/modifiedDate",
      "type": "string",
      "format": "date-time",
      "title": "Last modification date & time in ISO 8601 format"
    },
    "_rid": { "type": "string" },
    "_self": { "type": "string" },
    "_etag": { "type": "string" },
    "_ts": { "type": "number" },
    "_attachments": { "type": "string" }  
  }
}